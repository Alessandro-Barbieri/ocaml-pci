#!/bin/sh
set -e

(gcc -lpci stubgen/libpci_check.c -o libpci_check 2>/dev/null && ./libpci_check && rm -f libpci_check) ||
  (echo "Package needs libpci-dev >= 3.2.0 to be installed on your system"; rm -f libpci_check; exit 1)

# OASIS_START
# DO NOT EDIT (digest: dc86c2ad450f91ca10c931b6045d0499)
set -e

FST=true
for i in "$@"; do
  if $FST; then
    set --
    FST=false
  fi

  case $i in
    --*=*)
      ARG=${i%%=*}
      VAL=${i##*=}
      set -- "$@" "$ARG" "$VAL"
      ;;
    *)
      set -- "$@" "$i"
      ;;
  esac
done

ocaml setup.ml -configure "$@"
# OASIS_STOP
